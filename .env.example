# ============================================================================
# RunCoach AI - Environment Variables
# ============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env with real secrets to git!

# ============================================================================
# SECURITY (REQUIRED)
# ============================================================================
# Generate a strong secret key for JWT tokens
# Command to generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# AI/LLM (OPTIONAL for development, REQUIRED for production)
# ============================================================================
# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_api_key_here

# ============================================================================
# DATABASE (OPTIONAL - defaults to PostgreSQL in docker-compose)
# ============================================================================
# Only needed if using external database, not Docker
# DATABASE_URL=postgresql://user:password@localhost:5432/runcoach_db

# ============================================================================
# CACHE (OPTIONAL - defaults to Redis in docker-compose)
# ============================================================================
# Only needed if using external Redis, not Docker
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# FRONTEND (OPTIONAL)
# ============================================================================
# API URL for frontend to use
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# OAUTH INTEGRATIONS (OPTIONAL)
# ============================================================================
# Strava OAuth
# STRAVA_CLIENT_ID=your_client_id
# STRAVA_CLIENT_SECRET=your_client_secret

# Google Fit OAuth
# GOOGLE_FIT_CLIENT_ID=your_client_id
# GOOGLE_FIT_CLIENT_SECRET=your_client_secret

# Garmin Connect (for local sync - optional)
# GARMIN_EMAIL=your_email@example.com
# GARMIN_PASSWORD=your_password

# ============================================================================
# ENVIRONMENT
# ============================================================================
DEBUG=False
ENVIRONMENT=development
